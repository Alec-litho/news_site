{
    "compilerOptions": {
        "module": "ESnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "dist"
    },
    "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
